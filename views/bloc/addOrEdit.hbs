<div class="title">
    <h3>{{viewTitle}}</h3>
</div>
<div id="form">




    <form action="/bloc" method="POST" autocomplete="off" class="form">
        <input type="hidden" name="_id" value="{{bloc._id}}">
        <div class="form-group">
            <input type="text" class="form-control" name="code" placeholder="code " value="{{bloc.code}}">
            <div class="text-danger">
                {{bloc.codeError}}</div>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="libelle" placeholder="libelle" value="{{bloc.libelle}}">
            <div class="text-danger">
                {{bloc.libelleError}}</div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
           

        </div>
    </form>
</div>